// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
	"name": "Alpine",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "donn/docker-alpine-webdav",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/cirolosapio/devcontainers-features/alpine-node:0.0.15": {}
	},
	"postCreateCommand": "sudo apk add --no-cache --repository=http://dl-cdn.alpinelinux.org/alpine/edge/community onedrive",
	"customizations": {
		"vscode": {
			// Add VS Code settings here
			"settings": {
				// --- Add this section for the manifest schema ---
				"json.schemas": [
					{
						// Match the manifest.json file (adjust pattern if needed)
						"fileMatch": [
							"/manifest.json" // Matches manifest.json only at the workspace root inside the container
							// Use "manifest.json" to match any file with that name in the workspace
						],
						// URL to the schema definition
						"url": "https://json.schemastore.org/chrome-manifest"
					}
					// You can add other schema associations here if needed
				],
				// --- End of manifest schema section ---
				// Add any other desired VS Code settings for your dev container
				"editor.formatOnSave": true,
				"files.eol": "\n"
				// etc.
			}
		}
	}
}